{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "es6",
    "noImplicitAny": true,
    "strict": true,
    "outDir": "./dist",
    "target": "es6",
    "sourceMap": true,
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config"
      }
    ]
  },
  "include": ["src"],
  "exclude": [
    "__tests__",
    "**/*.test.ts",
    "node_modules",
    "lib"
  ]
}